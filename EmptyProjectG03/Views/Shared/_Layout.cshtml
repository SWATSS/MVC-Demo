<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*     <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
 *@    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.8/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @* Start Header *@
    <header>
        <center>
            <nav class="mt-5">
                @* 1. Html Tags | Static HTML *@
                <a href="/Home/Index" class="btn btn-primary m-2">Home</a>

                @* 2. HTML Helpers | Server-Side*@
                @* <a href="/Home/Privacy" class="btn btn-warning m-2">Privacy</a> *@
                @Html.ActionLink(linkText: "Privacy", actionName: "Privacy", controllerName: "Home", routeValues: null, htmlAttributes: new {@class = "btn btn-warning m-2"})

                @* 3. Tag Helpers *@
                @* <a href="/Home/AboutUs" class="btn btn-success m-2">About Us</a> *@
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success m-2">About Us</a>


                <a href="/Home/ContactUs" class="btn btn-secondary m-2">Contact Us</a>
                <a href="/Account/SignIn" class="btn btn-info m-2">Sign In</a>
                <a href="/Account/Register" class="btn btn-danger m-2">Register</a>
            </nav>
        </center>
    </header>
    @* End Header *@
    <div>
        @RenderBody()
    </div>
    @* Start Footer *@

    @* End Footer *@
</body>
</html>
